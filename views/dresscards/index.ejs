<% layout("/layouts/boilerplate") %>
<style>
  #filters{
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
  }
  .filter{
    display: flex;
    border: 1px solid black;
    border-radius: 10px;
    align-items: center;
    text-align: center;
  }
  .filter:hover{
    opacity: 0.7;
  }
  .filter img {
    height: 50px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
  }
  .filter p{
    padding: 5px;
    margin: 0;
  } 
  #filters a{
    text-decoration: none;
    color: #4a4e69;
  }
  .card-body{
    display: flex;
    justify-content: space-around;
    margin-top: 5px;
  }
</style>
<body>
    <div id="filters">
      <a href="/dresscards/category/women">
        <div class="filter">
          <img src="/womenlogo.webp" alt="women">
          <p> Women </p>
        </div>
      </a>
      <a href="/dresscards/category/men">
        <div class="filter">
          <img src="/men logo.jpg" alt="men">
          <p> Men </p>
        </div>
      </a>
      <a href="/dresscards/category/girl">
        <div class="filter">
          <img src="/girllogo.jfif" alt="girl">
          <p> Girls </p>
        </div>
      </a>
      <a href="/dresscards/category/boy">
        <div class="filter">
          <img src="/boylogo.jfif" alt="Boy">
          <p>Boys</p>
        </div>
      </a>
      <a href="/dresscards">
        <div class="filter">
          <img src="/kidslogo.webp" alt="Kids">
          <p>Kids</p>
        </div>
      </a>
      <a href="/dresscards">
        <div class="filter">
          <img src="/allfashion.webp" alt="All">
          <p>All</p>
        </div>
      </a>
      <div class="dropdown-center">
        <button class="btn btn-secondary dropdown-toggle" style="background-color: white;color: black; height: 50px;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Price
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/dresscards?sort=desc">High to Low</a></li>
          <li><a class="dropdown-item" href="/dresscards?sort=asc">Low to High</a></li>
        </ul>
      </div>
    </div>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 mt-2">
    <% for(let dresscard of allDressCards){ %>
    <a href="/dresscards/<%=dresscard._id %>" class="dresscard-link">
      <div class="card col me-3"style="height: 22rem;">
            <img src="<%= dresscard.image.url %>" class="card-img-top"style="height: 20rem;">
          <div class="card-body">
              <div class="card-title"><%= dresscard.title %></div>
          </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
