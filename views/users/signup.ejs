<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Sign Up</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation"novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" class="form-control" type="text"id="username" required >
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3">
                <lable for="email" class="form-label">Email</lable>
                <input name="email" class="form-control" type="email"id="email" required >
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" class="form-control" type="password"id="password" required >
            </div>
            <button class="btn btn-dark add-btn" type="submit">Sign Up</button>
        </form>
    </div>
</div>